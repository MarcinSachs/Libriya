# Libriya Environment Configuration
# Copy this file to .env and update the values for your environment

# Flask Configuration
FLASK_ENV=production  # Use 'development' for debug mode, 'production' for production
SECRET_KEY=your-secret-key-here-generate-a-strong-random-string  # IMPORTANT: Generate a strong random string!

# Database Configuration
# SQLite (development):
# DATABASE_URL=sqlite:///libriya.db

# MariaDB/MySQL (recommended for production):
# DATABASE_URL=mysql+pymysql://libriya_user:your_password@localhost:3306/libriya_db?charset=utf8mb4
# With mysqlclient (faster, requires C compiler): 
# DATABASE_URL=mysql://libriya_user:your_password@localhost:3306/libriya_db?charset=utf8mb4

# MariaDB Docker:
# DATABASE_URL=mysql+pymysql://libriya_user:secure_password@127.0.0.1:3306/libriya_db?charset=utf8mb4

# PostgreSQL (alternative):
# DATABASE_URL=postgresql://username:password@localhost:5432/libriya_db

# Application Settings
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes

# Rate Limiting Storage (Opcja 1: Production only)
# Leave empty/unset for development (uses in-memory storage)
# Set for production (requires Redis):
# RATELIMIT_STORAGE_URL=redis://:password@redis.example.com:6379/1
# See docs/OPCJA_1_REDIS_PRODUCTION_ONLY.md for details

# Internationalization
BABEL_DEFAULT_LOCALE=pl
BABEL_DEFAULT_TIMEZONE=UTC

# Security
# Set these to True only in development environment
DEBUG=False
TESTING=False

# Optional: Email Configuration (for future use)
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password

# Logging
LOG_LEVEL=INFO

# Enable HIBP checks
ENABLE_PWNED_CHECK = True
HIBP_TIMEOUT = 5.0
HIBP_CACHE_TTL = 86400  # seconds