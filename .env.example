# Libriya Environment Configuration
# Copy this file to .env and update the values for your environment

# Flask Configuration
FLASK_ENV=production  # Use 'development' for debug mode, 'production' for production
SECRET_KEY=your-secret-key-here-generate-a-strong-random-string  # IMPORTANT: Generate a strong random string!

# Database Configuration
# For SQLite (default):
# DATABASE_URL=sqlite:///libriya.db

# For PostgreSQL (recommended for production):
# DATABASE_URL=postgresql://username:password@localhost:5432/libriya

# For MySQL:
# DATABASE_URL=mysql+pymysql://username:password@localhost/libriya

# Application Settings
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes

# Internationalization
BABEL_DEFAULT_LOCALE=pl
BABEL_DEFAULT_TIMEZONE=UTC

# Security
# Set these to True only in development environment
DEBUG=False
TESTING=False

# Optional: Email Configuration (for future use)
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password

# Logging
LOG_LEVEL=INFO
