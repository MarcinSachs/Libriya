# Development Configuration - No Redis Required (Opcja 1)
# Use this for local development - Rate limiting uses in-memory storage

# ============ ENVIRONMENT ============
FLASK_ENV=development
APP_ENV=development
DEBUG=True
TESTING=False

# ============ SECURITY ============
# For development, any SECRET_KEY works. Generate with:
# python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=dev-secret-key-not-secure-for-production

# ============ DATABASE ============
# SQLite for local development
DATABASE_URL=sqlite:///libriya.db

# ============ SESSION SECURITY ============
# Less strict in development
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SECURE=False  # HTTP only in dev
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=3600

# ============ RATE LIMITING (OPCJA 1 - DEV) ============
# IMPORTANT: Leave RATELIMIT_STORAGE_URL empty or unset for development
# This uses in-memory storage (SimpleCache) - NO REDIS NEEDED
# 
# DO NOT SET THIS IN DEVELOPMENT:
# RATELIMIT_STORAGE_URL=redis://localhost:6379/1
#
# In development, rate limiting uses in-memory store automatically

# ============ EMAIL ============
# For development, use console output
MAIL_SERVER=localhost
MAIL_PORT=25
MAIL_USE_TLS=False
MAIL_USERNAME=
MAIL_PASSWORD=

# ============ PASSWORD SECURITY ============
# Disable HIBP checks in development (no need for outbound requests)
ENABLE_PWNED_CHECK=False
HIBP_TIMEOUT=5.0
HIBP_CACHE_TTL=86400

# ============ LOGGING ============
LOG_LEVEL=DEBUG

# ============ PREMIUM FEATURES ============
# Enable for testing in development
PREMIUM_BOOKCOVER_ENABLED=True
PREMIUM_BIBLIOTEKA_NARODOWA_ENABLED=True

# ============ SUBDOMAIN HANDLING ============
# Set to False if using custom hosts file entries in development
ENFORCE_SUBDOMAIN_EXISTS=False
